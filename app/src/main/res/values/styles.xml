<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    // untuk mengatur menu bar
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        // untuk memberikan warna tombol on backpres pada action bar
        <item name="colorControlNormal">@color/white</item>
    </style>
    // untuk membuat action bar manual
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- region Button Style-->
    <style name="StandardButton">
        <item name="android:layout_width">@dimen/dp300</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:background">@drawable/btn_standard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        // ngasih efek dari androit attribut
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    // jadi yang di standart button itu semua style nya bisa dipake di bawahnya
    // owh jadi yang di standar button itu bisa untuk membuat 2 attribut berbeda dari yang di layout  , kesimpulanya adalah di style itu dia bisa berbeda atribute
    <style name="WarningButton" parent="StandardButton">
        <item name="android:background">@drawable/btn_warning</item>
    </style>
    <style name="SendButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:background">@drawable/btn_send</item>
    </style>
    <style name="StandardImageButton">
        <item name="android:background">@drawable/btn_send</item>
        // ngasih efek dari androit attribut
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="WarningButtom" parent="StandardButton">
        <item name="android:background">@drawable/btn_warning</item>
    </style>

    <!-- endregion-->
    <!-- region Text Input Style-->
    <style name="StandardTextInput">
        // apa itu statis itu gak bisa diubah ubah  , mau layarnya gede atau kecil dia akan tetap sama dengan yang sudah di set
        <item name="android:layout_width">@dimen/dp300</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp8</item>
        <item name="android:paddingEnd">@dimen/dp8</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item> </style>

    <!-- endregion-->
    <!-- region Text Style-->
    <style name="Text">
        <item name="android:textSize">@dimen/sp14</item> </style>
    <style name="TextStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:paddingStart">@dimen/dp8</item>
        <item name="android:paddingEnd">@dimen/dp8</item>
    </style>
    // jadi fungsi nya linktext sama text itu untuk mewarisi text stle , dan size stle , jadi gausah ngebuat 2 kali
    <style name="LinkText" parent="Text">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="TitleNameText" parent="Text">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/dp8</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- endregion-->
    <!-- region box message conversation-->
    <style name="LayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item> </style>

    <style name="LayoutTextBox" parent="LayoutDefault">
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
    </style>
    <style name="MessageBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp8</item>
        <item name="android:paddingTop">@dimen/dp8</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
        <item name="android:paddingEnd">@dimen/dp8</item>
        // left|center_vertical artinya befungsi untuk menambahkan value , jadi satu attribut memiliki lebih dari satu value
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        // senggaknya setiap kita panggil massage box pokoknya minial higtnya sama kayak yang di set
        <item name="android:minHeight">@dimen/dp32</item>
        <item name="android:maxWidth">@dimen/dp300</item>
    </style>

    <!-- endregion-->
    <!-- region Progress Bar--> <style name="ProgressLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/shadow_color</item>
    <item name="android:gravity">center</item>
    <item name="android:orientation">vertical</item>
    <item name="android:visibility">gone</item>
</style>
    <!-- endregion-->
</resources>